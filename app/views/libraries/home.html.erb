<div class="container main-display">
	<h1>Welcome to My Library of Adventure Stories</h1>
	<h3>Click <%= link_to "Here", libraries_path %> to see my collection of adventures!</h3>

	<h4>Want to search for another adventure library?</h4>

	<%= form_for :library, url: "/libraries" do |f| %>
		<%= f.text_field :name, placeholder: "Library Name", class: "input-field" %><br />
		<%= f.text_field :url, placeholder: "Paste URL to search for library", class: "input-field" %><br />
		<%= f.submit "Search to Add Library", class: "btn btn-success lib-search-btn" %>
	<% end %>
</div>